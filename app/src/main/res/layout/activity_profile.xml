<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Profile"
    android:background="@color/whitegrey"
    android:orientation="vertical"
    android:paddingRight="20dp"
    android:paddingLeft="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/round_white_profile"
        android:elevation="20dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <RelativeLayout
            android:id="@+id/profile_relative1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/bg_pp"
                android:layout_width="125dp"
                android:layout_height="130dp"
                android:padding="15dp"
                android:src="@drawable/logo"/>

<!--            <de.hdodenhof.circleimageview.CircleImageView-->
<!--                android:id="@+id/pp"-->
<!--                android:layout_width="110dp"-->
<!--                android:layout_height="110dp"-->
<!--                android:layout_centerInParent="true"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:src="@drawable/user"-->
<!--                android:elevation="20dp"/>-->


        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/profile_relative1"
            >
            <TextView
                android:id="@+id/text_namauser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fullname"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginLeft="7dp"
                android:fontFamily="sans-serif-condensed-medium"/>
            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:background="@drawable/round_silver"
                android:text="Member"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:paddingLeft="7dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-condensed-medium"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:background="@drawable/round_corners"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_fullname_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_profile"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/profile_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fullname"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/icon_fullname_profile"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corners"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_email_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/email_filled"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/icon_email_profile"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corners"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_pass_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/npm"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/profile_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="17sp"
            android:layout_toRightOf="@+id/icon_pass_profile"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/round_corners"
        android:layout_gravity="center_horizontal"
        android:elevation="8dp">

        <ImageView
            android:id="@+id/icon_notelp_profile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/phone_icon"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/profile_notelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PhoneNumber"
            android:textSize="17sp"
            android:textColor="@color/grey"
            android:layout_toRightOf="@+id/icon_notelp_profile"
            android:textStyle="bold"
            android:layout_centerVertical="true"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingRight="55dp"
        android:paddingLeft="55dp"
        android:gravity="bottom">

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="@color/maroon"
            android:elevation="10dp"
            android:fontFamily="sans-serif"
            android:text="LOGOUT"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_gravity="end"
            android:textStyle="bold"
            android:layout_marginBottom="80dp"
            android:clickable="true"
            android:onClick="logout_profile"/>
    </LinearLayout>
</LinearLayout>