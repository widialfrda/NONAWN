<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.Tentang"
    android:orientation="vertical"
    android:background="@drawable/bg_tentang">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <ImageView
            android:id="@+id/back_dashboard"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrowback_garis"
            android:layout_marginLeft="13dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:id="@+id/relative1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_tentang"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/user"/>

            <TextView
                android:id="@+id/tittle_tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KNOW ME DEEPLY"
                android:layout_below="@+id/image_tentang"
                android:layout_marginTop="15dp"
                android:textColor="@color/dark_grey"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="casual"/>

        </RelativeLayout>

        <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_corners"
                android:layout_gravity="center_horizontal"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/icon_nama_tentang"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_profile"
                    android:layout_centerVertical="true"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/nama_tentang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Widi Alfrida Pramesti"
                    android:textSize="15sp"
                    android:layout_toRightOf="@+id/icon_nama_tentang"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corners"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/icon_NPM_tentang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/npm"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/npm_tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="36117181"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/icon_NPM_tentang"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corners"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/icon_kelas_tentang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/kelas"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/kelas_tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3DB01"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/icon_kelas_tentang"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/round_corners"
            android:layout_gravity="center_horizontal"
            android:elevation="8dp">

            <ImageView
                android:id="@+id/icon_univ_tentang"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/school"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/univ_tentang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Univ. Gunadarma"
                android:textSize="15sp"
                android:layout_toRightOf="@+id/icon_univ_tentang"
                android:textStyle="bold"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

    </LinearLayout>





</LinearLayout>