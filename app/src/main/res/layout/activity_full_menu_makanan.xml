<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User.FullMenuMakanan"
    android:background="@color/whitegrey">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:id="@+id/act_bar"
        android:weightSum="16"
        android:elevation="20dp"
        android:paddingLeft="10dp"
        android:background="@color/greymuda">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/arrowback_garis"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="VARIAN RASA"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="62dp"
                android:layout_marginRight="62dp"
                android:gravity="center_vertical"/>
        
            <FrameLayout
                android:layout_width="50dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/pict_menucart"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/cart_menu"
                    android:layout_gravity="center_vertical"/>
    
                <com.nex3z.notificationbadge.NotificationBadge
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"/>
            </FrameLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/act_bar">

        <LinearLayout
            android:id="@+id/layout_spicy"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_below="@id/act_bar"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Varian Pedas"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_varianspicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_nonspicy"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_alignBottom="@id/layout_spicy"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Varian Tidak Pedas"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="18sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_variannonspicy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="20dp"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>